<Shader Name="ModelPbr">
	<Include>Standard</Include>
	<Include>Skeleton</Include>
	<Include>Model</Include>
	
	<PROGRAM>
		<UseAttribute>vbSurface</UseAttribute>
		<UseAttribute>vbWeightedSkin</UseAttribute>
		<UseUniform>cbGlobalParam</UseUniform>
		<UseUniform>cbPerLight</UseUniform>
		<UseUniform>cbWeightedSkin</UseUniform>
		<UseSampler>samStandard</UseSampler>
		
		<Uniform Name="cbUnityMaterial" Slot="3">
			<Element Name="_SpecColor"			Type="float4" Default="1,1,1,1"></Element>
			<Element Name="_Color"				Type="float4" Default="1,1,1,1"></Element>
			<Element Name="_GlossMapScale"		Type="float"  Default="1"></Element>
			<Element Name="_OcclusionStrength"	Type="float"  Default="1"></Element>
			<Element Name="_SpecLightOff"		Type="int"    Default="0"></Element>
		</Uniform>
		<Uniform Name="cbUnityGlobal" Slot="4">
			<Element Name="_Unity_IndirectSpecColor" Type="float4" Default="0,0,0,0"></Element>
			<Element Name="_AmbientOrLightmapUV"	 Type="float4" Default="0.01,0.01,0.01,1"></Element>
			<Element Name="_Unity_SpecCube0_HDR"	 Type="float4" Default="0.5,1,0,0"></Element>
		</Uniform>
		
		<FileName>ModelPbr</FileName>
		<VertexEntry>VS</VertexEntry>
	</PROGRAM>
	
	<SubShader>
		<Pass>
			<Tags> <LightMode>ShadowCaster</LightMode> </Tags>
			<PROGRAM> 
				<VertexEntry>VSShadowCaster</VertexEntry> 
				<PixelEntry></PixelEntry>
			</PROGRAM>
		</Pass>
		<Pass>
			<Tags> <LightMode>ForwardBase</LightMode> </Tags>
			<PROGRAM> 
				<VertexEntry>VS</VertexEntry> 
				<PixelEntry>PS</PixelEntry> 
			</PROGRAM>
		</Pass>
		<Pass>
			<Tags> <LightMode>ForwardAdd</LightMode> </Tags>
			<PROGRAM> 
				<VertexEntry>VS</VertexEntry>
				<PixelEntry>PSAdd</PixelEntry> 
			</PROGRAM>
		</Pass>
	</SubShader>
</Shader>