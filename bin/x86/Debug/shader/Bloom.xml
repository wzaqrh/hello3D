<Shader Name="Bloom">
	<Include>Standard</Include>
	
	<PROGRAM>
		<UseAttribute>attrPos3Color4Tex2</UseAttribute>
		<UseUniform>cbGlobalParam</UseUniform>
		<UseSampler>samStandard</UseSampler>
		
		<Uniform Name="cbBloom" Slot="3">
			<Element Name="SampleOffsets"	Type="float4" Count="16"></Element>
			<Element Name="SampleWeights"	Type="float4" Count="16"></Element>
		</Uniform>
		
		<FileName>Bloom</FileName>
		<VertexEntry>VS</VertexEntry>
	</PROGRAM>
	
	<SubShader>
		<Pass>
			<PROGRAM> <PixelEntry>BloomPS</PixelEntry> </PROGRAM>
		</Pass>
		<Pass>
			<PROGRAM> <PixelEntry>FinalPass</PixelEntry> </PROGRAM>
		</Pass>
	</SubShader>
</Shader>